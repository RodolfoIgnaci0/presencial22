<p id="notice"><%= notice %></p>

  <h1>Students</h1>
<div class="row">
    <h3 class="col-md-3">Name</h3>
    <h3>Age</h3>
</div>

<div class="row">
    <% @students.each do |student| %>
    <div class="col-md-3">
      <%= student.name %>
    </div>
    <div class="col-md-3">
      <%= student.age %>
    </div>
    <div class="col-md-2">
      <%= link_to 'Show', student, class:'btn btn-primary' %>
    </div>
    <div class="col-md-2">
      <%= link_to 'Edit', edit_student_path(student), class:'btn btn-success' %>
    </div>
    <div class="col-md-2">
      <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-warning' %>
    </div>
    <% end %>
</div>

<%= link_to 'New Student', new_student_path %>
